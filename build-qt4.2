#!/bin/bash

PKG=qt-x11-opensource-src-4.2.0-rc1
JOBS=$(getconf _NPROCESSORS_ONLN)

pushd ../SOURCES
if [ ! -f $PKG.tar.gz ]; then
    wget ftp://ftp.trolltech.com/qt/source/$PKG.tar.gz
fi
popd

rm -rf $PKG
tar xfz ../SOURCES/$PKG.tar.gz

pushd $PKG
./configure -prefix ~/usr/lib/qt4.2 -qt-gif -no-exceptions <<EOF
yes
EOF
make - $JOBS
make install
popd

