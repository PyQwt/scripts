#!/bin/bash

VER=2.7
PKG=Python-$VER
JOBS=$(getconf _NPROCESSORS_ONLN)

pushd ../SOURCES
if [ ! -f $PKG.tar.bz2 ]; then
    wget http://www.python.org/ftp/python/$VER/$PKG.tar.bz2
fi
popd

pushd ../BUILD
rm -rf $PKG
tar xfj ../SOURCES/$PKG.tar.bz2
pushd $PKG
./configure --prefix=$HOME/usr --with-cxx=g++ --enable-shared --enable-unicode=ucs4
make -j $JOBS
make install
popd # $PKG
popd # ../BUILD

