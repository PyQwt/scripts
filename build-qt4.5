#!/bin/bash

PKG=qt-x11-opensource-src-4.5.2
JOBS=$(getconf _NPROCESSORS_ONLN)

pushd ../SOURCES
if [ ! -f $PKG.tar.gz ]; then
    wget ftp://ftp.trolltech.com/qt/source/$PKG.tar.gz
fi
popd

pushd ../BUILD
rm -rf $PKG
tar xfz ../SOURCES/$PKG.tar.gz
pushd $PKG
#sed -ie 's/QMAKE_LFLAGS\t/#QMAKE_LFLAGS\t/' mkspecs/common/g++.conf
./configure \
    -debug \
    -prefix ~/usr/lib/qt4.5 \
    -qt-gif \
    -no-rpath \
    -no-exceptions <<EOF
o
yes
EOF
make -j $JOBS
make install
popd # $PKG
popd # ../BUILD

