#!/bin/bash

PKG=SoQt-1.4.1
JOBS=$(getconf _NPROCESSORS_ONLN)

pushd ../SOURCES
if [ ! -f $PKG.tar.gz ]; then
    wget http://ftp.coin3d.org/coin/src/$PKG.tar.gz
fi
popd

pushd ../BUILD
rm -rf $PKG
tar xfz ../SOURCES/$PKG.tar.gz
pushd $PKG
./configure --prefix $HOME/usr/lib/qt4.2 --with-qt=$HOME/usr/lib/qt4.2
make -j $JOBS
make install
popd # $PKG
popd # ../BUILD

# Local Variables: ***
# mode: sh ***
# End: ***

